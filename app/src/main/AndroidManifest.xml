        </activity>
        <activity android:name=".screen.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".screen.register.RegisterActivity">
        </activity>
        <activity android:name=".screen.resetpassword.ResetPasswordActivity">
        </activity>
        <activity android:name=".screen.placedetail.PlaceDetailActivity">
        </activity>
        <activity android:name=".screen.commentdetail.CommentDetailActivity">
        </activity>
        <activity android:name=".screen.wifi.WifiActivity">
